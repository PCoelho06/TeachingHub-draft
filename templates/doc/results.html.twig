{% extends 'base.html.twig' %}

{% block title %}Résultats de la recherche
{% endblock %}

{% block body %}
	<div class="container my-5">
		<h1 class="page-title">Résultats de la recherche</h1>

		<div id="search-recap" class="w-100 d-flex justify-content-between align-items-center gap-3">
			<div class="my-3">Type</div>
			<div>Level</div>
			<div>Subject</div>
			<div>Theme</div>
		</div>

		<div class="bar w-75 mx-auto my-3"></div>

		<div id="filters" class="w-100 d-flex justify-content-between align-items-center gap-3">
			<div>Note</div>
			<div>Nombre de téléchargements</div>
			<div>Trier par</div>
		</div>

		<div id="results">
			{% for document in documents %}
				{{ document.title }}
			{% endfor %}
		</div>
	</div>
{% endblock %}
